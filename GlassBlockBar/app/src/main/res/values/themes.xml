<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GlassBlockBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GlassBlockBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GlassBlockBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Theme.GlassBlockBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GlassBlockSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/glass_block_thumb</item>
        <item name="android:thumbOffset">54px</item>
        <item name="android:progressDrawable">@drawable/view_seekbar_progress</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="Theme.VerticalGlassBlockSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/glass_block_thumb</item>
        <item name="android:thumbOffset">54px</item>
        <item name="android:progressDrawable">@drawable/view_seekbar_progress</item>
    </style>

</resources>